#####################################
# OllamaAssist Environment Configuration
#####################################

#####################################
# Ollama Settings
#####################################
OLLAMA_HOST=http://localhost:11434
DEFAULT_MODEL=deepseek-r1
# Alternative models:
# DEFAULT_MODEL=llama2
# DEFAULT_MODEL=mistral
# DEFAULT_MODEL=codellama

#####################################
# Brave Search Configuration
#####################################
# Get your API key from: https://brave.com/search/api/
BRAVE_API_KEY=your_api_key_here
BRAVE_ENABLED=true
BRAVE_COMMAND=npx
BRAVE_ARGS=-y @modelcontextprotocol/server-brave-search
# Optional: Set search limits
# BRAVE_MAX_RESULTS=10
# BRAVE_TIMEOUT=30

#####################################
# Filesystem Configuration
#####################################
FILESYSTEM_ENABLED=true 
FILESYSTEM_COMMAND=npx
# Multiple paths can be separated by colons
FILESYSTEM_PATHS=/path/to/project:/path/to/data
# For Windows, use semicolons:
# FILESYSTEM_PATHS=C:\path1;C:\path2

#####################################
# ChromaDB Configuration (Optional)
#####################################
# CHROMA_ENABLED=true
# CHROMA_HOST=localhost
# CHROMA_PORT=8000
# CHROMA_PERSIST_DIR=./data/chromadb

#####################################
# Memory Configuration (Optional)
#####################################
# MEMORY_ENABLED=true
# MEMORY_PERSIST_DIR=./data/memory
# MEMORY_MAX_TOKENS=2000

#####################################
# Development Settings
#####################################
# Debug levels: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
DEBUG=false

# Enable detailed tool logging
TOOL_DEBUG=false

# Optional: Enable development features
# DEV_MODE=false
# DEV_RELOAD=true

#####################################
# MCP Server Configuration
#####################################
# Location of MCP config file
MCP_CONFIG_PATH=./mcp_config.json

# Tool timeout in seconds
TOOL_TIMEOUT=30

# Optional: Tool rate limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_CALLS=100
# RATE_LIMIT_PERIOD=60

#####################################
# UI Configuration
#####################################
# Streamlit settings
PAGE_TITLE=OllamaAssist
THEME=light  # light or dark

# Model settings display
SHOW_MODEL_INFO=true
SHOW_CAPABILITIES=true